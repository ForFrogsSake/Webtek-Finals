<!DOCTYPE html>
<html>

<head>
    <title>Truck Rentals</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="./public/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href=https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
</head>

<body style="background-color: beige">
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <a class="navbar-brand" href="/<%= id %>/transactions">Truck Rental</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/<%= id %>/transactions">Transactions</a>
                </li>
                <li class="active nav-item">
                    <a class="nav-link" href="/<%= id %>/trucks">Trucks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/<%= id %>/addTruck">Add Truck</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://rentals.com">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid lead" style="padding: 0px 20px; ">
        <!--sample table-->

        <div class="row" style="padding-top: 50px;">
            <div class="col-sm-12">
                <div class="card" style="box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.25);">
                    <div class="card-header heading">
                        <div>
                            <h2 class="text-dark text-center" data-toggle="tooltip" data-placement="top" title="Select an item to view more details.">TRUCKS</h2>
                        </div>
                    </div>
                    <div class="lead" style=" margin: 10px">
                        <br>
                        <table class="table table-bordered table-hover"  id ="myTable">
                            <thead>
                                <tr>
                                    <th>
                                        <h3>Truck</h3>
                                    </th>
                                    <th>
                                        <h3>License Plate</h3>
                                    </th>
                                    <th>
                                        <h3>Capacity</h3>
                                    </th>
                                    <th>
                                        <h3>Category</h3>
                                    </th>
                                    <th>
                                        <h3>Number of Wheels</h3>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                <% for(i in trucks) { %>

                                    <tr data-toggle="modal" data-target="#requestModal">
                                        <td>
                                            <%= trucks[i].name %>
                                        </td>
                                        <td>
                                            <%= trucks[i].license_number %>
                                        </td>
                                        <td>
                                            <%= trucks[i].capacity %>
                                        </td>
                                        <td>
                                            <%= trucks[i].category %>
                                        </td>
                                        <td>
                                            <%= trucks[i].number_of_wheels %>
                                        </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
</html>